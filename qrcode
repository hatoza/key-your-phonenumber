<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>抽號碼系統</title>
  <style>
    body { font-family: sans-serif; text-align: center; padding: 2rem; }
    input, button { font-size: 1.2rem; padding: 0.5rem; margin: 0.5rem; }
    #result { font-size: 2rem; margin-top: 1rem; }
  </style>
</head>
<body>
  <h1>請輸入手機號碼進行抽號碼</h1>
  <input type="tel" id="phone" placeholder="輸入手機號碼" maxlength="10" />
  <button onclick="drawNumber()">抽號碼</button>
  <div id="result"></div>

  <script>
    function drawNumber() {
      const phone = document.getElementById('phone').value.trim();
      if (!/^09\d{8}$/.test(phone)) {
        alert('請輸入正確的手機號碼 (例如 0912345678)');
        return;
      }

      // 這裡產生 1 ~ 100 的隨機號碼
      const number = Math.floor(Math.random() * 100) + 1;
      document.getElementById('result').innerText = `您的號碼是：${number}`;
    }
  </script>
</body>
</html>
